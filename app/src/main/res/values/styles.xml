    <style name="NiagaraTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/niagara</item>
        <item name="colorPrimaryDark">@color/niagara</item>
        <item name="colorAccent">@color/niagara</item>
    </style>


    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <!--窗体背景，这个背景能在第一时间显示，可以用作启动界面，但此windows不可再使用view-->
        <!-- <item name="android:background">@drawable/bg_launch</item> -->
    </style>

    <style name="MainTheme" parent="BaseTheme">
        <!--窗体动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--抽屉开关箭头颜色-->
        <item name="color">@android:color/white</item>
    </style>
</resources>
