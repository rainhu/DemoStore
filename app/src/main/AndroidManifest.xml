<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rainhu.com.demostore"
    android:versionCode="1"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!--permission for recovery -->
    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.DELETE_CACHE_FILES" />
    <uses-permission android:name="android.permission.ACCESS_CACHE_FILESYSTEM" />
    <uses-permission android:name="android.permission.RECOVERY"/>

    <!--permission for camera-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/d_icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity android:name="rainhu.com.demostore.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="rainhu.com.demostore.activity.StorageFillerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden"/>

        <activity android:name="rainhu.com.demostore.mediademo.MediaDemoActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            />

        <activity android:name="rainhu.com.demostore.activity.AnimationActivity"/>

        <activity android:name="rainhu.com.demostore.powershot.PowershotActivity"/>

        <activity android:name="rainhu.com.demostore.binder.BinderDemoActivity"/>

        <activity android:name="rainhu.com.demostore.activity.AboutActivity" />

        <service android:name="rainhu.com.demostore.powershot.PowershotService">
        </service>


        <activity android:name=".applock.AppLockActivity"/>
        <provider
            android:authorities="rainhu.com.demostore"
            android:name=".utils.DemoStoreProvider"
            android:exported="true"/>

        <receiver android:name=".applock.ApplockReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.SCREEN_OFF"/>
            </intent-filter>
        </receiver> />

        <service android:name=".applock.ApplockService"/>

        <activity android:name=".activity.TempActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".activity.TestActivity"
            android:theme="@android:style/Theme.Translucent"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:finishOnCloseSystemDialogs="true" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
            
        </activity>

        <service android:name=".binder.LocalService"></service>
        
        <service android:name=".binder.RemoteService" android:process=":remote"> </service>

        <service android:name=".binder.AIDLRemoteService">
            <intent-filter>
                <action android:name="rainhu.com.demostore.binder.IAIDLRemoteService"/>
            </intent-filter>
        </service>



        <activity android:name=".activity.CameraTestActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden"/>

        <activity android:name=".activity.OtaTestActivity"/>

        <activity android:name=".EasyBrowser.EasyBrowserActivity"/>

        <activity android:name=".jniDemo.JniDemoActivity"/>

        <activity android:name=".jniDemo.LedActivity"/>

        <activity android:name=".viewer.ViewerActivity"/>
    </application>

</manifest>