<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rainhu.com.demostore"
    android:versionCode="1">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/d_icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity android:name="rainhu.com.demostore.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="rainhu.com.demostore.activity.StorageFillerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden"/>

        <activity android:name="rainhu.com.demostore.mediademo.MediaDemoActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            />

        <activity android:name="rainhu.com.demostore.activity.AnimationActivity"/>

        <activity android:name="rainhu.com.demostore.powershot.PowershotActivity"/>

        <activity android:name="rainhu.com.demostore.binder.BinderDemoActivity"/>

        <activity android:name="rainhu.com.demostore.activity.AboutActivity" />

        <service android:name="rainhu.com.demostore.powershot.PowershotService">
        </service>


        <activity android:name=".applock.AppLockActivity"/>
        <provider
            android:authorities="rainhu.com.demostore"
            android:name=".utils.DemoStoreProvider"
            android:exported="true"/>

        <receiver android:name=".applock.ApplockReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.SCREEN_OFF"/>
            </intent-filter>
        </receiver> />

        <service android:name=".applock.ApplockService"/>

        <activity android:name=".activity.TempActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity android:name=".activity.TestActivity"
            android:theme="@android:style/Theme.Translucent"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:finishOnCloseSystemDialogs="true" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
            
        </activity>

        <service android:name=".binder.LocalService"></service>
        
        <service android:name=".binder.RemoteService" android:process=":remote"> </service>

        <service android:name=".binder.AIDLRemoteService">
            <intent-filter>
                <action android:name="rainhu.com.demostore.binder.IAIDLRemoteService"/>
            </intent-filter>
        </service>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".temp.MyGcmTaskService"  android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
            </intent-filter>
        </service>

    </application>

</manifest>