<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rainhu.com.demonstore">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/d_icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.StorageFillerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden"/>

        <activity android:name=".mediademo.MediaDemoActivity"/>

        <activity android:name=".activity.AnimationActivity"/>

        <activity android:name=".powershot.PowershotActivity"/>

        <activity android:name=".activity.ThreadDemoActivity"/>

        <activity android:name=".activity.AboutActivity" />

        <service android:name=".powershot.PowershotService">
        </service>

    </application>

</manifest>