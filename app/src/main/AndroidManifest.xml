<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rainhu.com.demostore"
    android:versionCode="1">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/d_icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="rainhu.com.demostore.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="rainhu.com.demostore.activity.StorageFillerActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden"/>

        <activity android:name="rainhu.com.demostore.mediademo.MediaDemoActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            />

        <activity android:name="rainhu.com.demostore.activity.AnimationActivity"/>

        <activity android:name="rainhu.com.demostore.powershot.PowershotActivity"/>

        <activity android:name="rainhu.com.demostore.activity.ThreadDemoActivity"/>

        <activity android:name="rainhu.com.demostore.activity.AboutActivity" />

        <service android:name="rainhu.com.demostore.powershot.PowershotService">
        </service>


        <activity android:name=".applock.AppLockActivity"/>
        <provider
            android:authorities="rainhu.com.demostore"
            android:name=".utils.DemoStoreProvider"
            android:exported="true"/>

        <receiver android:name=".applock.ApplockReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>

            </intent-filter>
        </receiver> />


    </application>

</manifest>